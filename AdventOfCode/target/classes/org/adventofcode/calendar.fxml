<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="calendarRoot" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="assignmentList" focusTraversable="false" prefWidth="300.0" style="-fx-background-color: #aaaaaa;" VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#showDescription" text="Task Description" />
         </children>
      </VBox>
   </left>
</BorderPane>
